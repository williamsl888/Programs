<h2>String Charat method</h2>
<p id="demo"></p>

<button onclick="myFunction()" class="btn">Try it</button>

<script>
  var str=prompt("Enter a string");
  document.getElementById("demo").innerHTML=str;
function myFunction() {
  var ch=parseInt(prompt("Please enter the index "));
  document.getElementById("demo").innerHTML=str.charAt(ch);
}
</script>

