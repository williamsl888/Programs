<h2>Converting string to array using split</h2>
<p id="demo"></p>



<script>
  var str=prompt("Enter a string");
  
  var arr=str.split(" ");
  var len=arr.length;
 var text=" ";
  var i;
  for(i=0;i<len;i++)
  {
  text+="arr["+i+"] ="+arr[i]+"<br>";
  }
document.getElementById("demo").innerHTML=arr[0];

</script>

